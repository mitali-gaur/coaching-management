<% content_for :title do %>
  Company
<% end %>

<div class="company-details-container">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= @company.name %></h3>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @company.description %></p>
      <div class="mt-4">
        <%= link_to "Login", new_employee_session_path(id: @company.id), class: 'btn btn-primary mr-2' %>
        <%= link_to "Sign up", new_employee_registration_path(id: @company.id), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
